    .iris{
      transform-origin:50% 50%;
      transition:transform .15s linear;
    }

    .pupil{
      transform-origin:50% 50%;
      transition:transform .06s linear;
    }

    /* continuous subtle pulse on iris */
    @keyframes irisPulse {
      0% { transform: scale(1); filter:brightness(1) drop-shadow(0 0 0 rgba(255,255,255,0)); }
      50% { transform: scale(1.02); filter:brightness(1.03) drop-shadow(0 0 6px rgba(255,255,200,0.12)); }
      100% { transform: scale(1); filter:brightness(1) drop-shadow(0 0 0 rgba(255,255,255,0)); }
    }
    .iris { animation: irisPulse 3.2s ease-in-out infinite; }

    /* sparkle animation when correct */
    @keyframes sparkle {
      0% { opacity:0; transform: scale(0.2) translateY(6px) rotate(15deg); filter:blur(2px) }
      40% { opacity:1; transform: scale(1.05) translateY(0) rotate(0deg); filter:blur(0) }
      100% { opacity:0; transform: scale(1.5) translateY(-6px) rotate(-8deg); filter:blur(2px) }
    }

    .sparkle .spark {
      animation: sparkle .9s cubic-bezier(.16,.9,.34,1);
    }

    /* outer glow when spark happens */
    .sparkle .iris { filter: drop-shadow(0 0 18px rgba(255,255,200,0.25)) saturate(1.15); }
