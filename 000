    }
    button:active{transform:translateY(2px)}
    .true{background:#4caf50;color:#fff}
    .false{background:#f44336;color:#fff}
    #startBtn{background:var(--accent); color:#fff}
    #restartBtn{background:var(--accent); color:#fff}

    /* Result text */
    #result{font-weight:700; font-size:18px; margin-top:10px}

    /* SVG eye styling & animations */
