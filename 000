  <div id="game" role="application" aria-label="Jogo Ca√ßador de Fake News">
    <header>
      <h1>
        <span id="eyes" aria-hidden="true">
          <!-- Left eye -->
          <svg class="eye-svg" viewBox="0 0 100 100" xmlns="http://www.w3.org/2000/svg">
