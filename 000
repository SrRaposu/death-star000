    <div id="screen" role="region" aria-live="polite">
      <p>Bem-vindo! Clique no bot√£o abaixo para come√ßar.</p>
      <button id="startBtn">Come√ßar</button>
    </div>
  </div>

  <script>
    /* Perguntas - personalize √† vontade */
    const questions = [
      { text: "Beber √°gua com lim√£o cura COVID-19.", answer: false },
      { text: "Vacinas passam por testes rigorosos antes de serem aprovadas.", answer: true },
      { text: "Compartilhar not√≠cias sem checar a fonte pode espalhar desinforma√ß√£o.", answer: true },
      { text: "Chocolate derretido no micro-ondas recarrega bateria de celular.", answer: false }
    ];

    let current = 0, score = 0;
    const screen = document.getElementById('screen');
    const eyes = document.getElementById('eyes');
    const irisL = document.getElementById('iris-left');
    const irisR = document.getElementById('iris-right');
    const pupilL = document.getElementById('pupil-left');
    const pupilR = document.getElementById('pupil-right');

    function showQuestion(){
      if(current < questions.length){
        screen.innerHTML = `
          <p>${questions[current].text}</p>
          <div>
            <button class="true" aria-label="Resposta Verdadeiro">Verdadeiro</button>
            <button class="false" aria-label="Resposta Fake News">Fake News</button>
          </div>
        `;
        document.querySelector('.true').onclick = () => checkAnswer(true);
        document.querySelector('.false').onclick = () => checkAnswer(false);
      } else {
        endGame();
      }
    }

    function checkAnswer(answer){
      const correct = (answer === questions[current].answer);
      if(correct){
        score++;
        triggerSparkle(); // olhos brilham quando acerta
      } else {
        // pequeno "tremor" visual quando erra
        eyes.style.transform = 'translateY(2px) rotate(-1deg)';
        setTimeout(()=> eyes.style.transform = '', 160);
      }
      current++;
      setTimeout(showQuestion, 220);
    }

    function endGame(){
      let msg = "";
      if(score === questions.length) msg = "Parab√©ns! Mestre em identificar fake news! üéâ";
      else if(score >= questions.length/2) msg = "Mandou bem, mas d√° pra melhorar! üòâ";
      else msg = "Cuidado ‚Äî caiu em muitas fake news... üò¨";

      screen.innerHTML = `
        <p>Fim de jogo!</p>
        <p id="result">Voc√™ acertou ${score} de ${questions.length}.</p>
        <p>${msg}</p>
        <button id="restartBtn">Jogar de Novo</button>
      `;
      document.getElementById('restartBtn').onclick = () => {
        current = 0; score = 0; showQuestion();
      };
    }

    document.getElementById('startBtn').onclick = showQuestion;

    /* EFEITO: acionar brilho nos olhos */
    function triggerSparkle(){
      // adiciona a classe que anima sparks e glow
      eyes.classList.add('sparkle');
      // mostrar as <g class="spark"> com opacidade tempor√°ria para cada svg
      const sparks = eyes.querySelectorAll('.spark');
      sparks.forEach(s => {
        s.style.opacity = 1;
        s.style.transform = 'translateY(0)';
      });

      // remove depois
      setTimeout(()=> {
        eyes.classList.remove('sparkle');
        sparks.forEach(s => {
          s.style.opacity = 0;
        });
      }, 900);
    }

    /* PUPIL FOLLOW: legais efeitos de olhar conforme mouse */
    function movePupils(evt){
      const rect = eyes.getBoundingClientRect();
      const centerX = rect.left + rect.width/2;
      const centerY = rect.top + rect.height/2;
      const dx = (evt.clientX - centerX) / rect.width; // -0.5 .. 0.5 aprox
      const dy = (evt.clientY - centerY) / rect.height;
      // limitar deslocamento
      const max = 6; // pixels de movimento da pupila
      const px = Math.max(Math.min(dx * max * 2, max), -max);
      const py = Math.max(Math.min(dy * max * 2, max), -max);

      // aplicar transform nas pupilas/√≠ris (pequena tradu√ß√£o e escala)
      pupilL.setAttribute('cx', 50 + px*0.12);
      pupilL.setAttribute('cy', 50 + py*0.12);
      pupilR.setAttribute('cx', 50 + px*0.12);
      pupilR.setAttribute('cy', 50 + py*0.12);

      irisL.setAttribute('cx', 50 + px*0.03);
      irisL.setAttribute('cy', 50 + py*0.03);
      irisR.setAttribute('cx', 50 + px*0.03);
      irisR.setAttribute('cy', 50 + py*0.03);
    }

    // habilita seguir mouse apenas em desktops (n√£o atrapalhar em toque)
    if(window.matchMedia && window.matchMedia('(pointer:fine)').matches){
      window.addEventListener('mousemove', movePupils);
      // tamb√©m small random micro-movement pra vida
      setInterval(()=> {
        const e = { clientX: window.innerWidth * (0.4 + Math.random()*0.2), clientY: window.innerHeight * (0.3 + Math.random()*0.2) };
        movePupils(e);
      }, 2500);
    }

    // acessibilidade: se o usu√°rio usa teclado, n√£o mover demais
    window.addEventListener('blur', ()=> {
      // reset posi√ß√µes
      pupilL.setAttribute('cx',50); pupilL.setAttribute('cy',50);
      pupilR.setAttribute('cx',50); pupilR.setAttribute('cy',50);
      irisL.setAttribute('cx',50); irisL.setAttribute('cy',50);
      irisR.setAttribute('cx',50); irisR.setAttribute('cy',50);
    });
  </script>
</body>
