            <g class="spark" fill="rgba(255,255,230,0.9)" opacity="0">
              <path d="M70 24 L74 35 L86 36 L76 44 L80 56 L70 48 L60 56 L64 44 L54 36 L66 35 Z" transform="translate(-6,-10) scale(.18)"/>
