              <path d="M70 24 L74 35 L86 36 L76 44 L80 56 L70 48 L60 56 L64 44 L54 36 L66 35 Z" transform="translate(-34,-10) scale(.18)"/>
            </g>
          </svg>

          <!-- Right eye -->
          <svg class="eye-svg" viewBox="0 0 100 100" xmlns="http://www.w3.org/2000/svg">
            <defs>
              <radialGradient id="g2" cx="60%" cy="35%">
                <stop offset="0%" stop-color="#fff"/>
                <stop offset="30%" stop-color="#d6f8e0"/>
                <stop offset="100%" stop-color="#0aa65b"/>
              </radialGradient>
            </defs>
            <ellipse class="eye-frame" cx="50" cy="50" rx="46" ry="30" fill="#fffefc" stroke="#ddd" stroke-width="1"/>
